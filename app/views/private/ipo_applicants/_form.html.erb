<%= simple_form_for(@ipo_applicant) do |f| %>
    <%= f.input :production, label:'产品名称' %>
    <%= f.input :base_unit, label:'基本单位' %>
    <%= f.input :issue_price, label:'发行价' %>
    <%= f.input :total_stock, label:'发行总数量' %>
    <%= f.input :top_limit, label:'申购上限' %>
    <%= f.input :start_time,as: :date, start_year: Date.today.year,
                end_year: Date.today.year + 10,
                order: [:year,:month, :day],label:'申购起始时间' %>
    <%= f.input :end_time,as: :date,start_year: Date.today.year,
                end_year: Date.today.year + 10,
                order: [:year,:month, :day],  label:'申购截止日期' %>
    <%= f.button :wrapped, '申请' %>
<% end %>
<style>
    #ipo_applicant_start_time_1i,#ipo_applicant_start_time_2i,#ipo_applicant_start_time_3i,
    #ipo_applicant_end_time_1i,#ipo_applicant_end_time_2i,#ipo_applicant_end_time_3i{
        display:inline-block;

    }
    #ipo_applicant_start_time_1i,#ipo_applicant_end_time_1i {
        width:20%;
    }
    #ipo_applicant_start_time_2i,#ipo_applicant_end_time_2i {
        width:40%;
    }
    #ipo_applicant_start_time_3i,#ipo_applicant_end_time_3i {
        width:38%;
    }
</style>